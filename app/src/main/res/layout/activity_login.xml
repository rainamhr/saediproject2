<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="37dp"
    android:layout_marginRight="37dp"
    tools:context="com.example.queen.saediproject.loginActivity">

    <ImageView
        android:id="@+id/imgforwelcome"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/welcome" />

    <ImageView
        android:id="@+id/imgforlogo"
        android:layout_below="@+id/imgforwelcome"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"/>

   <View
       android:id="@+id/startView1"
       android:layout_marginTop="40dp"
       android:layout_below="@+id/imgforlogo"
       android:layout_width="90dp"
       android:layout_height="1dp"
       android:background="#cec5c5"/>

    <TextView
        android:id="@+id/txt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgforlogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="LOGIN"
        android:textSize="18dp" />

    <View
        android:id="@+id/startView2"
        android:layout_width="90dp"
        android:layout_height="1dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/startView1"
        android:background="#cec5c5" />

    <LinearLayout
        android:id="@+id/start_linear"
        android:layout_marginTop="10dp"
        android:layout_below="@id/startView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Email"
            android:textSize="16dp"/>

        <EditText
            android:id="@+id/editText_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_edit_text"
            android:hint="Type your email address"
            android:inputType="none"
            android:paddingLeft="20dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/text_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Password"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/editText_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_edit_text"
            android:hint="Type your password"
            android:paddingLeft="20dp"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_next_step"
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"
            android:layout_height="70dp"
            android:background="@drawable/my_button"
            android:text="next step"
            android:textColor="#fff" />
    </LinearLayout>

</RelativeLayout>
</ScrollView>
